# ============================================
# CSS Soccer Server - Environment Variables
# ============================================
# Copy this file to .env and customize

# === SERVER IDENTITY ===
CSS_HOSTNAME=CSS Soccer Server
CSS_PASSWORD=
RCON_PASSWORD=changeme

# === NETWORK ===
CSS_PORT=27015
CSS_MAXPLAYERS=14
CSS_TICKRATE=100

# === GAMEPLAY ===
# Default map (soccer_psl_breezeway_fix if not set)
CSS_MAP=soccer_psl_breezeway_fix

# === FAST DOWNLOAD ===
# Required for players to download skins
# CSS_DOWNLOADURL=https://your-fastdl-server.com/css/

# === STEAM ===
# Required for public servers (get from https://steamcommunity.com/dev/managegameservers)
# STEAM_GSLT=

# === DATABASE ===
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=soccermod
MYSQL_USER=soccermod
MYSQL_PASSWORD=soccermodpassword
